{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Extract Components to sc_rnaseq Excel",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/utils/convert.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/schemas/sc_rnaseq.json",  // Path to your JSON file
                "${workspaceFolder}/schemas/sc_rnaseq.xlsx", // Path to your output file
                "extended" // Termset argument (either 'core' or 'extended')
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
