        "name": "Python: Extract All Components in All Standards and Termsets",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/convert.py",
        "console": "integratedTerminal",
        "args": [],
        "python": "${workspaceFolder}/venv/bin/python",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
